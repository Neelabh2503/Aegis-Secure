# ==============================================
# AegisSecure Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================
# APPLICATION SETTINGS
# ======================
DEBUG=False
APP_NAME=AegisSecure Backend
APP_VERSION=1.0.0

# ======================
# SECURITY - JWT
# ======================
# REQUIRED: Use a strong, unique secret key for production
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=12
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_JWT_TTL_MINUTES=15

# ======================
# DATABASE
# ======================
# REQUIRED: MongoDB connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=aegis_secure

# ======================
# GOOGLE OAUTH
# ======================
# REQUIRED: Get these from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# For local development:
GOOGLE_REDIRECT_URI=http://localhost:10000/auth/google/callback
# For production (ngrok/deployed):
# GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# ======================
# EMAIL / SMTP (for OTP)
# ======================
# REQUIRED: Gmail account for sending OTP emails
SMTP_EMAIL=your-email@gmail.com
# Get OAuth2 refresh token from Google OAuth Playground
# https://developers.google.com/oauthplayground/
REFRESH_TOKEN=your-google-oauth2-refresh-token
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ======================
# OTP CONFIGURATION
# ======================
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5

# ======================
# PASSWORD REQUIREMENTS
# ======================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_LOGIN_PER_HOUR=5

# ======================
# EXTERNAL APIs
# ======================
# REQUIRED: ML Model API endpoint for spam/phishing detection
CYBER_MODEL_URL=https://your-ml-api-endpoint.com/predict
CYBER_SECURE_API_URI=https://your-ml-api-endpoint.com/predict

# REQUIRED: Groq API key for AI features
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here
API_TIMEOUT_SECONDS=15

# OPTIONAL: Firebase Cloud Messaging for push notifications
FCM_SERVER_KEY=

# ======================
# CORS SETTINGS
# ======================
# For development: use "*"
# For production: specify your frontend domain
CORS_ORIGINS=*
# Production example:
# CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ======================
# LOGGING
# ======================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Optional: Log to file (create logs/ directory first)
# LOG_FILE=logs/aegis_secure.log

# ======================
# WEBSOCKET (if used)
# ======================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# ======================
# CACHE / REDIS (Optional)
# ======================
# Uncomment to enable Redis caching
# REDIS_URL=redis://localhost:6379
# CACHE_TTL_SECONDS=300

# ======================
# PAGINATION
# ======================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==============================================
# SETUP INSTRUCTIONS
# ==============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in all REQUIRED fields with your actual credentials
# 3. Adjust optional settings as needed
# 4. Never commit .env to version control
# 5. Keep your secrets secure!
#
# For more details, see: README.md or documentation
# ==============================================
