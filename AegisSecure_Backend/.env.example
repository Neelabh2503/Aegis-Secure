# AegisSecure Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# APPLICATION SETTINGS
# ======================
DEBUG=False
APP_NAME=AegisSecure Backend
APP_VERSION=1.0.0

# ======================
# SECURITY - JWT
# ======================
# IMPORTANT: Generate a strong secret key (min 32 characters)
# You can generate one using: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-please-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=12
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_JWT_TTL_MINUTES=15

# ======================
# DATABASE
# ======================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/aegis_secure
# Or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/aegis_secure?retryWrites=true&w=majority
DB_NAME=aegis_secure

# ======================
# EMAIL / SMTP
# ======================
SMTP_EMAIL=your-email@gmail.com
REFRESH_TOKEN=your-google-oauth-refresh-token

# ======================
# GOOGLE OAUTH
# ======================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# ======================
# OTP CONFIGURATION
# ======================
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5

# ======================
# PASSWORD REQUIREMENTS
# ======================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_LOGIN_PER_HOUR=5

# ======================
# EXTERNAL APIs
# ======================
CYBER_MODEL_URL=https://cybersecure-backend-api.onrender.com/predict
API_TIMEOUT_SECONDS=15

# ======================
# CORS
# ======================
# For development: *
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=*

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
# Optional: Specify log file path
# LOG_FILE=logs/aegis_secure.log

# ======================
# WEBSOCKET
# ======================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# ======================
# PAGINATION
# ======================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# ======================
# CACHE (Optional - Redis)
# ======================
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL_SECONDS=300

# ======================
# NOTES
# ======================
# 1. Never commit the .env file to version control
# 2. Keep JWT_SECRET secure and unique per environment
# 3. Use strong, randomly generated secrets
# 4. Set DEBUG=False in production
# 5. Configure CORS_ORIGINS properly for production
# 6. Use environment-specific MongoDB URIs
